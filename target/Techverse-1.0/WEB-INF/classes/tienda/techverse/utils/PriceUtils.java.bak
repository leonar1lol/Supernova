package tienda.supernova.utils;

import java.math.BigDecimal;
import java.text.DecimalFormat;
import java.text.DecimalFormatSymbols;
import java.util.Locale;

public class PriceUtils {

    // Formats a BigDecimal price to a string like: S/ 1,234.56
    public static String formatSoles(BigDecimal amount) {
        if (amount == null) return "S/ 0.00";
    DecimalFormatSymbols symbols = new DecimalFormatSymbols(Locale.forLanguageTag("es-PE"));
        symbols.setDecimalSeparator('.');
        symbols.setGroupingSeparator(',');
        DecimalFormat df = new DecimalFormat("#,##0.00", symbols);
        return "S/ " + df.format(amount);
    }

    // Overload for double
    public static String formatSoles(double amount) {
        return formatSoles(BigDecimal.valueOf(amount));
    }
}
