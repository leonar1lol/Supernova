package tienda.supernova.servlets;

import jakarta.servlet.ServletException;
import jakarta.servlet.annotation.WebServlet;
import jakarta.servlet.http.HttpServlet;
import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;
import jakarta.servlet.http.HttpSession;
import java.io.IOException;

@WebServlet("/contact-submit")
public class ContactServlet extends HttpServlet {
    @Override
    protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
        request.setCharacterEncoding("UTF-8");
        String nombre = request.getParameter("nombre");
        String email = request.getParameter("email");
        String asunto = request.getParameter("asunto");
        String mensaje = request.getParameter("mensaje");

        HttpSession session = request.getSession(true);

        if (nombre == null || nombre.trim().isEmpty() || email == null || email.trim().isEmpty() || mensaje == null || mensaje.trim().isEmpty()) {
            session.setAttribute("contactError", "Por favor completa los campos obligatorios (nombre, email y mensaje).");
            // Preserve previously entered fields in session for redisplay
            session.setAttribute("contactNombre", nombre != null ? nombre : "");
            session.setAttribute("contactEmail", email != null ? email : "");
            session.setAttribute("contactAsunto", asunto != null ? asunto : "");
            session.setAttribute("contactMensaje", mensaje != null ? mensaje : "");
            response.sendRedirect(request.getContextPath() + "/contacto.jsp");
            return;
        }


    session.setAttribute("contactSuccess", "Gracias, " + nombre + ", tu mensaje ha sido recibido.");
        session.removeAttribute("contactNombre");
        session.removeAttribute("contactEmail");
        session.removeAttribute("contactAsunto");
        session.removeAttribute("contactMensaje");

        System.out.println("[Contact] " + nombre + " <" + email + ">: " + (asunto != null ? asunto : "(sin asunto)") + " - " + mensaje);

        response.sendRedirect(request.getContextPath() + "/contacto.jsp");
    }
}
